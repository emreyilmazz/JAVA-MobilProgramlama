<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="212dp"
        android:layout_height="223dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        android:onClick="SendMail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/_9799585_227706895037535_2189162968418091008_n" />

    <Button
        android:id="@+id/btn_ara"
        android:layout_width="192dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:text="@string/btn_ara_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#03A9F4"
        android:onClick="callPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btn_postagonder"
        android:layout_width="192dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:onClick="SendMail"
        android:text="@string/btn_email_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ara" />1

    <Button
        android:id="@+id/btn_sehir"
        android:layout_width="192dp"
        android:layout_height="56dp"
        android:layout_marginTop="23dp"
        android:text="@string/btn_sehir_text"
        android:onClick="MyCityActivity"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_postagonder" />

    <Button
        android:id="@+id/btn_dersler"
        android:layout_width="192dp"
        android:layout_height="56dp"
        android:layout_marginTop="21dp"
        android:text="@string/btn_ders_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#03A9F4"
        android:onClick="CoursesActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sehir" />

</androidx.constraintlayout.widget.ConstraintLayout>